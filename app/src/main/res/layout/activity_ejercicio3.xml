<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio3">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/ejercicio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:onClick="ejercicio4"
            android:text="Ejercicio4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ejercicio4"
            android:layout_marginTop="16dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/añadirPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir Pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/eliminarPokemon" />

    <Button
        android:id="@+id/eliminarPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Pokemon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/añadirPokemon"/>

</androidx.constraintlayout.widget.ConstraintLayout>